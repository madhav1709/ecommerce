extends layout

block content
  .container
    form.form-signin(role='form', action="http://localhost:3000/newkart/signup/user",method="post", style='max-width: 300px;')
      h2.form-signin-heading Sign Up here
      input.form-control(type='text', name="name", placeholder='Your Name',required='true')
      input.form-control(type='text', name="username", placeholder='Your Username',required='true')
      input.form-control(type='text', name="mobile_no",placeholder='Mobile phone number',required='true')
      input.form-control(type='text', name="email_id",placeholder='Email_id',required='true')
      input.form-control(type='password', name="password", placeholder='Your Password',required='true')
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign Up
