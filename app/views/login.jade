extends layout

block content
  .container
    form.form-signin(role='form', action='http://localhost:3000/newkart/login', method='post')
      h2.form-signin-heading Please sign in
      label.sr-only(for='inputEmail')
      input.form-control(type='text', name='email_id', id='inputEmail', placeholder='Enter E-mail', required, autofocus)
      input.form-control(type='password', name='password', id='inputPassword', placeholder='Password')
      button.btn.btn-lg.btn-primary.btn-block(type='submit') LOGIN
      a.btn.btn-link(href='http://localhost:3000/newkart/forgot') Forgot Password??
